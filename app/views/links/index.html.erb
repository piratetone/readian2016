<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Links</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>URL</th>
        <th>Label</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @links.each do |link| %>
        <tr>
          <td><%= link.title %></td>
          <td><%= link.url %></td>
          <td><%= link.label %></td>
          <td><%= link_to 'Show', link %></td>
          <td><%= link_to 'Edit', edit_link_path(link) %></td>
          <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Link', new_link_path %>

</div>
